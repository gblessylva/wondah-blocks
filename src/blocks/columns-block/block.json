{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 2,
    "name": "wondah-blocks/columns-block",
    "version": "0.1.0",
    "title": "Columns Block",
    "category": "design",
    "icon": "columns",
    "description": "A flexible columns layout container for other blocks",
    "supports": {
        "html": false,
        "anchor": true,
        "align": ["wide", "full"]
    },
    "attributes": {
        "columns": {
            "type": "number",
            "default": 2
        },
        "gap": {
            "type": "number", 
            "default": 30
        },
        "backgroundColor": {
            "type": "string",
            "default": "#ffffff"
        },
        "padding": {
            "type": "number",
            "default": 40
        }
    },
    "textdomain": "wondah-blocks",
    "editorScript": "file:./index.js",
    "editorStyle": "file:./index.css",
    "style": "file:./style-index.css"
}